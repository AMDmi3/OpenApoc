<?xml version="1.0" encoding="UTF-8"?>
<openapoc>
  <form id="FORM_INGAMEOPTIONS">
    <style minwidth="640" minheight="480">
      <position x="centre" y="centre"/>
      <size width="640" height="480"/>
      <graphic>
        <image>xcom3/ufodata/menuopt.pcx</image>
        <position x="0" y="0"/>
        <size width="640" height="480"/>
        <label text="OPTIONS">
          <position x="113" y="0"/>
          <size width="420" height="32"/>
          <alignment horizontal="centre" vertical="centre"/>
          <font>BIGFONT</font>
        </label>
        <label id="TEXT_FUNDS">
          <position x="572" y="11"/>
          <size width="60" height="10"/>
          <alignment horizontal="left" vertical="centre"/>
          <font>SMALFONT</font>
        </label>
        <graphicbutton id="BUTTON_OK">
          <position x="602" y="443"/>
          <size width="35" height="34"/>
          <image/>
          <imagedepressed>BUTTON_OK_DEPRESSED</imagedepressed>
        </graphicbutton>
        <textbutton id="BUTTON_SAVEGAME" text="Save Game">
          <position x="18" y="48"/>
          <size width="260" height="28"/>
          <font>SMALFONT</font>
        </textbutton>
        <textbutton id="BUTTON_LOADGAME" text="Load Game">
          <position x="18" y="76"/>
          <size width="260" height="28"/>
          <font>SMALFONT</font>
        </textbutton>
        <textbutton id="BUTTON_DELETESAVEDGAME" text="Delete Old Saved Game">
          <position x="18" y="113"/>
          <size width="260" height="28"/>
          <font>SMALFONT</font>
        </textbutton>
        <textbutton id="BUTTON_ABANDONGAME" text="Abandon and Restart Game">
          <position x="18" y="167"/>
          <size width="260" height="28"/>
          <font>SMALFONT</font>
        </textbutton>
        <textbutton id="BUTTON_QUIT" text="Quit X-COM Apocalypse">
          <position x="18" y="195"/>
          <size width="260" height="28"/>
          <font>SMALFONT</font>
        </textbutton>
        <scroll id="GLOBAL_GAIN_SLIDER">
          <position x="76" y="264"/>
          <size width="145" height="15"/>
          <range min="0" max="20"/>
        </scroll>
        <graphicbutton id="GLOBAL_GAIN_DOWN" scrollprev="GLOBAL_GAIN_SLIDER">
          <position x="61" y="262"/>
          <size width="16" height="20"/>
          <image/>
          <imagedepressed>BUTTON_SLIDER_LEFT_DEPRESSED</imagedepressed>
        </graphicbutton>
        <graphicbutton id="GLOBAL_GAIN_UP" scrollnext="GLOBAL_GAIN_SLIDER">
          <position x="222" y="262"/>
          <size width="17" height="20"/>
          <image/>
          <imagedepressed>BUTTON_SLIDER_RIGHT_DEPRESSED</imagedepressed>
        </graphicbutton>
        <scroll id="MUSIC_GAIN_SLIDER">
          <position x="76" y="292"/>
          <size width="145" height="15"/>
          <range min="0" max="20"/>
        </scroll>
        <graphicbutton id="MUSIC_GAIN_DOWN" scrollprev="MUSIC_GAIN_SLIDER">
          <position x="61" y="290"/>
          <size width="16" height="20"/>
          <image/>
          <imagedepressed>BUTTON_SLIDER_LEFT_DEPRESSED</imagedepressed>
        </graphicbutton>
        <graphicbutton id="MUSIC_GAIN_UP" scrollnext="MUSIC_GAIN_SLIDER">
          <position x="222" y="290"/>
          <size width="17" height="20"/>
          <image/>
          <imagedepressed>BUTTON_SLIDER_RIGHT_DEPRESSED</imagedepressed>
        </graphicbutton>
        <scroll id="SAMPLE_GAIN_SLIDER">
          <position x="76" y="319"/>
          <size width="145" height="15"/>
          <range min="0" max="20"/>
        </scroll>
        <graphicbutton id="SAMPLE_GAIN_DOWN" scrollprev="SAMPLE_GAIN_SLIDER">
          <position x="61" y="318"/>
          <size width="16" height="20"/>
          <image/>
          <imagedepressed>BUTTON_SLIDER_LEFT_DEPRESSED</imagedepressed>
        </graphicbutton>
        <graphicbutton id="SAMPLE_GAIN_UP" scrollnext="SAMPLE_GAIN_SLIDER">
          <position x="222" y="318"/>
          <size width="17" height="20"/>
          <image/>
          <imagedepressed>BUTTON_SLIDER_RIGHT_DEPRESSED</imagedepressed>
        </graphicbutton>
        <checkbox id="SHOW_TILE_ORIGIN">
          <position x="310" y="80"/>
          <size width="19" height="16"/>
          <image>BUTTON_CHECKBOX_FALSE</image>
          <imagechecked>BUTTON_CHECKBOX_TRUE</imagechecked>
        </checkbox>
        <label text="Show Tile Origin">
          <position x="330" y="80"/>
          <font>SMALLSET</font>
          <size width="300" height="16"/>
        </label>
        <checkbox id="SHOW_VEHICLE_PATH">
          <position x="310" y="100"/>
          <size width="19" height="16"/>
          <image>BUTTON_CHECKBOX_FALSE</image>
          <imagechecked>BUTTON_CHECKBOX_TRUE</imagechecked>
        </checkbox>
        <label text="Show Vehicle Path">
          <position x="330" y="100"/>
          <font>SMALLSET</font>
          <size width="300" height="16"/>
        </label>
        <checkbox id="SHOW_SELECTABLE_BOUNDS">
          <position x="310" y="120"/>
          <size width="19" height="16"/>
          <image>BUTTON_CHECKBOX_FALSE</image>
          <imagechecked>BUTTON_CHECKBOX_TRUE</imagechecked>
        </checkbox>
        <label text="Show Selectable Bounds">
          <position x="330" y="120"/>
          <font>SMALLSET</font>
          <size width="300" height="16"/>
        </label>
        <textbutton text="Give all research" id="BUTTON_GIVE_ALL_RESEARCH">
          <position x="310" y="140"/>
          <font>SMALLSET</font>
          <size width="200" height="32"/>
        </textbutton>
        <textbutton text="Into battle!" id="BUTTON_INTO_BATTLE">
          <position x="310" y="172"/>
          <font>SMALLSET</font>
          <size width="200" height="32"/>
        </textbutton>
      </graphic>
    </style>
  </form>
</openapoc>
